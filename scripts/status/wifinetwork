#!/bin/sh

disabled=$(nmcli general | tail -1 | awk '{print $4}')
state=$(nmcli general | tail -1 | awk '{print $1}')

if [ $disabled = disabled ]
then
  wifiicon=ïƒ»
elif [ $state = connected ]
then
  wifiicon=ï‡« # $(awk '/^\s*w/ { print "ï‡«", int($3 * 100 / 70) "%" }' /proc/net/wireless)
